<main class="container">
    <div class="header">
        <h1><i class="bi bi-shop"></i> Stores</h1>
            <span><%= link_to "Create store", new_store_path, class: "butn butn--primary" if admin?(current_user) %></span>
    </div>

    <% if @stores.none? %>
        <%= render "stores/empty_state" %>
    <% end %>

    <div class="row">
        <%= render @stores %>
    </div>
</main>