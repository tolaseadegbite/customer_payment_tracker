<main class="container">
  <%= link_to sanitize("&larr; Back to customer"), customer_path(@customer) %>

  <div class="header">
    <h1>New item for <%= l(@product_item_date.date, format: :long) %></h1>
  </div>

  <%= turbo_frame_tag nested_dom_id(@product_item_date, ProductItem.new) do %>
    <%= render "form",
              customer: @customer,
              product_item_date: @product_item_date,
              product_item: @product_item %>
  <% end %>
</main>