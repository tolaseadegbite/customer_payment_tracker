<div class="nested-form-wrapper row w-100" data-new-record="<%= f.object.new_record? %>">
    <div class="col-md-4">
        <%= f.text_field :amount, placeholder: "Enter amount paid", class: "form-control mb-3" %>
    </div>

    <div class="col-md-4">
        <%= f.date_field :date, class: "form-control" %>
    </div>

    <div class="col-md-3">
        <button type="button" class="butn butn--light" data-action="nested-form#remove">Remove payment</button>
    </div>


  <%= f.hidden_field :_destroy %>
</div>
